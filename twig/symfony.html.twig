{% extends "base.html.twig" %}

{% block title %}Welcome to Symfony{% endblock %}

{% block stylesheets %}
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        .container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 800px;
            width: 100%;
            padding: 3rem;
        }
        h1 {
            color: #667eea;
            margin-bottom: 0.5rem;
            font-size: 2.5rem;
        }
        .subtitle {
            color: #666;
            margin-bottom: 2rem;
            font-size: 1.1rem;
        }
        .info-grid {
            display: grid;
            gap: 1.5rem;
            margin: 2rem 0;
        }
        .info-card {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 8px;
            border-left: 4px solid #667eea;
        }
        .info-card h3 {
            color: #333;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
        }
        .info-card p {
            color: #666;
            font-family: 'Courier New', monospace;
            font-size: 0.9rem;
        }
        .badge {
            display: inline-block;
            background: #667eea;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.85rem;
            margin-right: 0.5rem;
        }
        .badge.dev { background: #28a745; }
        .badge.prod { background: #dc3545; }
        .badge.test { background: #ffc107; color: #333; }
        .footer {
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #dee2e6;
            text-align: center;
            color: #666;
            font-size: 0.9rem;
        }
        .footer a {
            color: #667eea;
            text-decoration: none;
        }
        .footer a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>üéâ Symfony Application</h1>
        <p class="subtitle">Your application is now running!</p>

        <div class="info-grid">
            <div class="info-card">
                <h3>üìç Current Route</h3>
                <p>{{ app.request.get('_route') ?: 'No route matched' }}</p>
            </div>

            <div class="info-card">
                <h3>üåç Environment</h3>
                <p>
                    <span class="badge {{ app.environment }}">{{ app.environment|upper }}</span>
                    {% if app.debug %}
                        <span class="badge">Debug Mode</span>
                    {% endif %}
                </p>
            </div>

            <div class="info-card">
                <h3>üë§ User Status</h3>
                <p>
                    {% if app.user %}
                        Logged in as: {{ app.user.userIdentifier }}
                    {% else %}
                        Not authenticated
                    {% endif %}
                </p>
            </div>

            <div class="info-card">
                <h3>üîß Request Details</h3>
                <p>
                    Method: {{ app.request.method }}<br>
                    Path: {{ app.request.pathInfo }}<br>
                    Locale: {{ app.request.locale }}
                </p>
            </div>

            {% if app.flashes|length > 0 %}
                <div class="info-card">
                    <h3>üí¨ Flash Messages</h3>
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <p><span class="badge">{{ label }}</span> {{ message }}</p>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <div class="footer">
            <p>
                Built with <a href="https://symfony.com" target="_blank">Symfony {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</a>
                | <a href="https://symfony.com/doc" target="_blank">Documentation</a>
            </p>
        </div>
    </div>
{% endblock %}
